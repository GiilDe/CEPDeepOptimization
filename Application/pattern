select * from Event#length(8) as a, Event#length(8) as b, Event#length(8) as c, Event#length(8) as d, Event#length(8) as e
where
a.count < b.count and
b.count < c.count and
b.count < d.count and
c.count < e.count and
d.count < e.count and
a.type = 'A' and
b.type = 'B' and
c.type = 'C' and
d.type = 'D' and
(e.type = 'A' or e.type = 'B')
done


select * from Event
match_recognize (
measures A as a, B as b, C as c
after match skip to current row
pattern (A B C)
define
A as A.type = 'A',
B as B.type = 'B',
C as C.type = 'C'
)
done


select * from Event
match_recognize (
measures A as a, B as b, C as c
pattern (A C{1,6} B)
define
 A as A.type = 'A',
 B as B.type = 'B',
 C as C.type != 'A'
)
done

select * from pattern[every [2] (a=Event(type='A') and not Event(type='C'))]
done
select * from pattern[every Event(type='A') -> every [2:6]Event(type='A')]
done





